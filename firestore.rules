rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Profiles collection
    match /profiles/{profileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if false; // Don't allow profile deletion
    }
    
    // Cases collection (read-only for authenticated users)
    match /cases/{caseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write cases (via admin SDK)
    }
    
    // Case evidence (read-only for authenticated users)
    match /case_evidence/{evidenceId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // Case questions (read-only for authenticated users)
    match /case_questions/{questionId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // User case progress
    match /user_case_progress/{progressId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if false;
    }
    
    // User activity
    match /user_activity/{activityId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
